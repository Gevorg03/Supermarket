<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activityes.RegistrationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/ed_name_rg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Օգտատեր"
        android:drawableStart="@drawable/ic_account"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_registration"
        android:layout_marginTop="60dp"/>

    <EditText
        android:id="@+id/ed_pass_rg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Գաղտնաբառ"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/ed_name_rg"/>

    <CheckBox
        android:id="@+id/checkbox_pass"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10sp"
        android:text="Տեսնել գաղտնաբառը"
        app:layout_constraintTop_toBottomOf="@+id/ed_pass_rg"/>

    <EditText
        android:id="@+id/ed_pass2_rg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/custom_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="12dp"
        android:hint="Գաղտնաբառի կրկնություն"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_pass"/>

    <CheckBox
        android:id="@+id/checkbox_pass2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10sp"
        android:text="Տեսնել գաղտնաբառը"
        app:layout_constraintTop_toBottomOf="@+id/ed_pass2_rg"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/custom_input"
        app:layout_constraintTop_toBottomOf="@id/checkbox_pass2"
        android:text="Հաստատել"/>

</androidx.constraintlayout.widget.ConstraintLayout>