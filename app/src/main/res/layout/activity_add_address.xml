<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_add_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/ed_add_address_address"
        android:layout_width="match_parent"
        android:hint="Address"
        android:drawableStart="@drawable/ic_address"
        android:drawablePadding="12dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/custom_input"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_add_address"
        android:layout_marginTop="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_height="40dp"/>

    <EditText
        android:id="@+id/ed_add_address_phone"
        android:layout_width="match_parent"
        android:hint="Phone"
        android:drawableStart="@drawable/ic_phone"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"
        app:layout_constraintTop_toBottomOf="@+id/ed_add_address_address"
        android:layout_marginTop="10sp"
        android:inputType="number"
        android:maxLength="12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_height="40dp"/>

    <ImageView
        android:id="@+id/img_not_wifi_add_address"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_error_add_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img_not_wifi_add_address"
        android:layout_marginTop="10sp"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>