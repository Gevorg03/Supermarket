<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityes.ui.AccountFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_account_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_account"
        android:layout_marginRight="5sp"
        android:drawableLeft="@drawable/ic_person"
        android:gravity="left|center_vertical"
        android:textStyle="bold"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="7sp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_account_userName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10sp"
        android:drawableLeft="@drawable/ic_list"
        android:foregroundGravity="left|center_vertical"
        android:text="իմ հասցեները"
        android:textSize="16sp"
        android:drawableRight="@drawable/ic_keyboard_arrow_right"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="7sp"
        android:background="@drawable/flag_transparent"/>

    <Button
        android:id="@+id/btn_log_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_address"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10sp"
        android:drawableLeft="@drawable/ic_power"
        android:foregroundGravity="left|center_vertical"
        android:text="ելք"
        android:textSize="16sp"
        android:drawableRight="@drawable/ic_keyboard_arrow_right"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="7sp"
        android:background="@drawable/flag_transparent"/>

    <Button
        android:id="@+id/btn_delete_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_log_out"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10sp"
        android:drawableLeft="@drawable/ic_delete_forever"
        android:foregroundGravity="left|center_vertical"
        android:text="Ջնջել հաշիվը"
        android:textSize="16sp"
        android:drawableRight="@drawable/ic_keyboard_arrow_right"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="7sp"
        android:background="@drawable/flag_transparent"/>

    <ImageView
        android:id="@+id/img_not_wifi_account"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_error_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img_not_wifi_account"
        android:layout_marginTop="10sp"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>